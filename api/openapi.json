{
    "openapi": "3.0.0",
    "info": {
        "version": "1",
        "title": "ExLaSpatule",
        "description": "API to manage recipes."
    },
    "paths": {
        "/user/login": {
            "post": {
                "operationId": "UserLogIn",
                "description": "Log in a user.",
                "parameters": [],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserCredentials"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "The user was successfully authenticated.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string",
                                    "description": "AÂ bearer token to authenticate this user."
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unknown user email or password"
                    }
                }
            }
        },
        "/user/logout": {
            "get": {
                "operationId": "UserLogOut",
                "description": "Log out the connected user, if any. It always returns a 200 OK HTTP code",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "The user was successfully logged out."
                    }
                }
            }
        },
        "/ingredients": {
            "post": {
                "operationId": "CreateIngredient",
                "description": "Create a new ingredient. The ingredient name must not exist",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CreateIngredient"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "The ingredient was successfully created.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Ingredient"
                                }
                            }
                        }
                    },
                    "401": {
                        "$ref": "#/components/responses/UnauthorizedError"
                    },
                    "409": {
                        "description": "An ingredient with the same name already exist. The existing ingredient is returned.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Ingredient"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/recipes": {
            "post": {
                "operationId": "CreateRecipes",
                "description": "Create a new recipe.",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CreateRecipe"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "The recipe was successfully created.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Recipe"
                                }
                            }
                        }
                    },
                    "401": {
                        "$ref": "#/components/responses/UnauthorizedError"
                    }
                }
            }
        },
        "/recipes/{id}": {
            "get": {
                "operationId": "GetRecipe",
                "description": "Get a recipe. The user must be the author of the recipe or the recipe must be part of one of the user group.",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Recipe"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "$ref": "#/components/responses/UnauthorizedError"
                    },
                    "403": {
                        "description": "The user has not access to this recipe."
                    }
                }
            }
        }
    },
    "components": {
        "responses": {
            "UnauthorizedError": {
                "description": "Bearer token is missing or invalid"
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer"
            }
        },
        "schemas": {
            "CreateIngredient": {
                "properties": {
                    "name": {
                        "nullable": false,
                        "type": "string",
                        "example": "eggplant"
                    }
                }
            },
            "CreateRecipe": {
                "properties": {
                    "name": {
                        "nullable": false,
                        "type": "string",
                        "example": "The best ratatouille!"
                    },
                    "ingredients": {
                        "nullable": false,
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/RecipeIngredient"
                        }
                    },
                    "steps": {
                        "nullable": false,
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/RecipeStep"
                        }
                    }
                }
            },
            "Ingredient": {
                "properties": {
                    "id": {
                        "nullable": false,
                        "type": "string",
                        "format": "uuid"
                    },
                    "name": {
                        "nullable": false,
                        "type": "string",
                        "example": "eggplant"
                    }
                }
            },
            "RecipeIngredient": {
                "properties": {
                    "id": {
                        "nullable": false,
                        "type": "string",
                        "format": "uuid"
                    },
                    "name": {
                        "nullable": false,
                        "type": "string",
                        "example": "eggplant"
                    },
                    "quantity": {
                        "nullable": false,
                        "type": "number",
                        "example": 1
                    },
                    "unit": {
                        "nullable": false,
                        "type": "string",
                        "example": "kg"
                    }
                }
            },
            "RecipeStep": {
                "properties": {
                    "description": {
                        "nullable": false,
                        "type": "string"
                    }
                }
            },
            "Recipe": {
                "properties": {
                    "id": {
                        "nullable": false,
                        "type": "string",
                        "format": "uuid"
                    },
                    "name": {
                        "nullable": false,
                        "type": "string",
                        "example": "The best ratatouille!"
                    },
                    "ingredients": {
                        "nullable": false,
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/RecipeIngredient"
                        }
                    },
                    "steps": {
                        "nullable": false,
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/RecipeStep"
                        }
                    }
                }
            },
            "UserCredentials": {
                "properties": {
                    "email": {
                        "nullable": false,
                        "type": "string",
                        "format": "email",
                        "example": "ernaxeli@example.org"
                    },
                    "password": {
                        "nullable": false,
                        "type": "string",
                        "example": "mySup3r_Secure-P@ssw0rd!"
                    }
                }
            }
        }
    }
}
